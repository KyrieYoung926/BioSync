/* pages/index/index.wxss */
.container {
  display: flex;
  justify-content: space-between;
  margin-top: 20px;
}

.time-container {
  margin-top: 20px;
  display: flex;
  justify-content: space-between;
}

.picker {
  line-height: 40px;
}

.time-box {
  width: 45%;
  padding: 10px;
  border: 1px solid #ccc;
  border-radius: 5px;
}

.left-box, .right-box {
  width: 48%; /* 或者使用 flex: 1; 控制宽度 */
  padding: 10px;
  border: 1px solid #ccc;
  border-radius: 5px;
}
.title {
  font-size: 24px;
  margin: 20px;
}
slider {
  width: 80%;
  margin-top: 20px;
}
button {
  width: 80%;
  margin-top: 20px;
}
